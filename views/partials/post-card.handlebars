<div class="card m-3 mb-4 border-dark">
  <div class="card-header d-flex flex-column bg-dark text-light">
    <div>{{title}}</div>
    <small>{{user.first_name}} {{user.last_name}} | {{createdAt}}</small>
  </div>
  <div class="card-body d-flex flex-column">
    <div class="mb-3">
      {{body}}
    </div>
    <div class="d-flex justify-content-end">
      <a
        href="/view/{{id}}"
        class="btn btn-outline-dark card-link btn-sm"
      >View</a>
    </div>
  </div>
</div>