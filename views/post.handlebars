{{#if isLoggedIn}}
{{> private-navbar}}
{{else}}
{{> public-navbar}}
{{/if}}
    <div class="d-flex justify-content-center post-container">
      <div class="mt-5 w-75 border border-dark">
        <div class="card-header d-flex flex-column bg-dark text-light">
          <div>
            {{post.title}}
          </div>
          <small>{{post.user.first_name}} {{post.user.last_name}} | {{formatDate post.createdAt}}</small>
        </div>
        <div class="card-body d-flex flex-column">
          <div>
            {{post.body}}
          </div>
        </div>

       {{#if correctUser}}
        <div class="p-3 d-flex justify-content-end">
          <a
            href="/dashboard/edit/{{post.id}}"
            class="btn btn-outline-dark card-link"
            name="edit-post"
            >Edit</a
          >
          <button id="{{post.id}}" name="delete-btn" class="btn btn-dark card-link">
            Delete
          </button>
        </div>
      {{/if}}
      
      </div>
    </div>
    <div class="d-flex justify-content-center comments-container">
      <div class="mt-5 w-50 border border-dark">
        <div class="card-header d-flex justify-content-between border border-dark">
          <div>Comments</div>
          {{#if isLoggedIn}}
          <button
            type="button"
            class="btn btn-dark btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#modal"
          >
            Add comment
          </button>
          {{/if}}
        </div>
        <div class="card-body">
          {{#each comments as |comment|}}
            {{> comment-card}}
            {{else}}
            <div>No comments on this post</div>
          {{/each}}
        </div>
      </div>
    </div>

<div class="modal fade" id="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add a Comment</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form id="{{post.id}}" name="comment-form">
        <div class="modal-body">
          <div class="mb-3">
            <textarea
              class="form-control"
              id="comment-input"
              rows="3"
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-outline-dark"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn btn-dark">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>